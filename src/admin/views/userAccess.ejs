<div class="modal fade" id="displayModalForUserAccess" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-success" role="document">
        <div class="modal-content">
            
            <div class="modal-body">
                <div class="col-sm-12">
                    <div class="card">
                            <div class="card-header">
                                    <strong><i class="fa fa-plus"></i> USER ACCESS</strong>
                                    <!-- <small>Form</small> -->
                                </div>
                        <div class="card-body">
                            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-12 col-form-label" for="select1">PROJECTS</label>
                                    <div class="col-md-12">
                                        <select id="accessProject" name="project" class="form-control">
                                            <option value="0">Select projects</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12 col-form-label">Varibles permissions</label>
                                    <div class="col-md-12 col-form-label">
                                        <div class="form-check form-check-inline mr-1">
                                            <input class="form-check-input" type="radio" id="accessCategoryAll" value="*" name="inline-radios" checked="true">
                                            <label class="form-check-label" for="inline-radio1">All the variables</label>
                                        </div>
                                        <div class="form-check form-check-inline mr-1">
                                            <input class="form-check-input" type="radio" id="accessCategoryCustomized" value="customized" name="inline-radios">
                                            <label class="form-check-label" for="inline-radio2">Personalization</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="contentCategory">
                                    <label class="col-md-12 col-form-label" for="multiple-select">Categories</label>
                                    <div class="col-md-12">
                                        <select id="accessCategories" name="multiple-select" class="form-control" size="5" multiple="">
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <button type="submit" id="addAccessToProject" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> ADD </button>
                        <div id="listProjectsAdded">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancelUserAccess" data-dismiss="modal">CANCEL <i class="fa fa-times"></i></button>
                    <button type="button" class="btn btn-success" id="createUserAccess">CREATE <img src="img/logo.png" width="15%" alt=""></button>
                </div>
            </div>
        </div>
    </div>
</div>
